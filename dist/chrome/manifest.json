{
  "manifest_version": 3,
  "version": "0.1",
  "name": "ConText tools",
  "description": "A browser extension offering a suite of text manipulation tools accessible via the context menu.",
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_scripts/content-0.js"
      ],
      "css": []
    }
  ],
  "action": {
    "default_popup": "action/default_popup.html",
    "default_title": "ConText tools",
    "default_icon": {}
  },
  "icons": {
    "16": "public/icon/icon_16.png",
    "48": "public/icon/icon_48.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "public/*",
        "web_accessible_resources/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ]
}